{
  "name": "lone-goose-press",
  "version": "1.0.1",
  "description": "",
  "main": "server.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/nikolaswise/lone-goose-press.git"
  },
  "author": "",
  "license": "BSD-2-Clause",
  "devDependencies": {

  },
  "dependencies": {
    "hapi": "~8.2.0",
    "stripe": "~3.3.2",
    "request": "~2.53.0",
    "observable": "~2.1.3",
    "ampersand-events": "~1.0.1",
    "diff-dom": "~1.0.0"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "watches": {
    "html": [
      "source/**/*.html",
      "source/**/*.md"
    ],
    "js": "source/_assets/**/*.js",
    "sass": "source/**/*.scss",
    "img": "source/"
  },
  "scripts": {
    "start": "npm run dev",
    "predev": "npm-run-all html sass img js",
    "dev": "parallelshell 'http-server build/' 'rerun-script'",
    "fmt": "standard --format",
    "img": "imagemin-newer source/_assets/ build/assets",
    "js": "simplifyify source/_assets/js/index.js --outfile build/assets/js/bundle.js --debug",
    "sass": "node-sass source/_assets/css/style.scss -o build/assets/css --include-path node_modules/",
    "html": "static-site -s source -h source/_helpers/*.js --template _layouts/layout.html --block content -b build",
    "prestage": "npm run predev",
    "stage": "surge build --domain lone-goose-preview.nikolas.ws/",
    "predeploy": "npm run predev",
    "deploy": "git push deploy master"
  }
}
